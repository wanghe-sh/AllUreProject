<link type="text/css" rel="stylesheet" href="/static/css/page/resetPassword.css">
<!-- register start-->
	<div class="al-reset-password-wrap">
		<div class="al-reset-password-area">
			<div class="al-reset-password-info">
                <div class="al-reset-password-text">
                    <h3>{{'passwordreset' | translate}}</h3>
@if (!ViewBag.IsResetPassword)
{
    <form class="form-horizontal register-form" action="/user/resetpassword" method="post" name="registerForm">

        <div class="form-group">
            <label for="userPassword" class="col-sm-3 control-label">{{'password' | translate}}:</label>
            <div class="col-sm-8">
                <input type="hidden" name="email" id="email" class="form-control" value="@ViewBag.Email"/>
                <input type="password" name="userPassword" class="form-control" id="userPassword" placeholder="{{'password' | translate}}">
            </div>
        </div>

        <div class="form-group">
            <label for="userConfirmPassword" class="col-sm-3 control-label">{{'confirmpassword' | translate}}:</label>
            <div class="col-sm-8">
                <input type="password" name="userConfirmPassword" class="form-control" id="userConfirmPassword" placeholder="{{'confirmpassword' | translate}}">
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">{{'Reset' | translate}}</button>
            </div>
        </div>
    </form>
}
else
{


    <div>
        <div class="alert alert-success" role="alert">
            <span>{{'ResetPasswordSuccessInfo' | translate}}</span>
            <a href="/user/login">{{'Login' | translate}}</a>
        </div>
    </div>
}
                </div>
			</div>
		</div>
	</div>
<!-- register end-->
